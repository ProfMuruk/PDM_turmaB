<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormularioPessoaActivity"
        >

        <EditText
            android:id="@+id/nome_pessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Nome pessoa"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/idade_pessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Idade: 34"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@id/nome_pessoa"
            app:layout_constraintStart_toStartOf="@id/nome_pessoa"
            app:layout_constraintTop_toBottomOf="@+id/nome_pessoa" />

        <EditText
            android:id="@+id/profissao_pessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="ProfissÃ£o"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@id/idade_pessoa"
            app:layout_constraintStart_toStartOf="@id/idade_pessoa"
            app:layout_constraintTop_toBottomOf="@id/idade_pessoa" />

        <EditText
            android:id="@+id/altura_pessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Altura: 1.83"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@id/profissao_pessoa"
            app:layout_constraintStart_toStartOf="@id/profissao_pessoa"
            app:layout_constraintTop_toBottomOf="@+id/profissao_pessoa"
            tools:ignore="UnknownId" />

        <Button
            android:id="@+id/botao_salvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salvar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/altura_pessoa"
            app:layout_constraintStart_toStartOf="@id/altura_pessoa"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>